<% surats.forEach(surat => { %>
<div
  class="modal fade"
  id="send<%= surat.id %>"
  tabindex="-1"
  aria-labelledby="sendLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-dark" id="sendLabel">
          <i class="bi bi-chevron-right"></i> Tandai Dibaca
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>Tandai sudah dibaca?</p>
      </div>
      <div class="modal-footer">
        <form action="/surat?_method=patch" method="post">
          <button
            type="button"
            class="btn btn-outline-dark"
            data-bs-dismiss="modal"
          >
            Batal
          </button>

          <input type="hidden" name="id" value="<%= surat.id %>" />

          <button type="submit" class="btn btn-dark">
            <i class="bi bi-patch-check"></i> Tandai Dibaca
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<% }) %>
